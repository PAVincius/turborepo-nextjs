{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "GITHUB_ID",
    "GITHUB_SECRET",
    "GITHUB_ACCESS_TOKEN",
    "PREVIEW_URL_SECRET",
    "NODE_ENV",
    "NEXT_PUBLIC_APP_URL",
    "MONGODB_URI",
    "SMTP_HOST",
    "SMTP_PORT",
    "SMTP_USER",
    "SMTP_PASSWORD",
    "EMAIL_FROM",
    "MONGODB_URI",
    "MONGODB_DATABASE"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "storybook-static/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
